@{
    ViewData["Title"] = "Grade Calc";
    }

@model CalculatorModel;

<!--Grade Calc Form-->
<h2>Grade Calculator:</h2>
<h6>Enter in percentage scored for each category to calculate final grade</h6>
<h6>i.e. Category (weight): </h6>
<form method="post">
    <label>Assignments (50%): </label>
    <input id="as" asp-for="Assignments" /><br />
    <label>Group Project (10%): </label>
    <input id="gp" asp-for="GroupProject" /><br />
    <label>Quizzes (10%): </label>
    <input id="qz" asp-for="Quiz" /><br />
    <label>Midterm Exam (10%): </label>
    <input id="me" asp-for="Midterm" /><br />
    <label>Final Exam (10%): </label>
    <input id="fe" asp-for="Final" /><br />
    <label>INTEX (10%): </label>
    <input id="intex" asp-for="Intex" /><br />
    <input id="CalcGrade" type="submit" value="Calculate Grade" /><br />

    <div asp-validation-summary="All"></div>

    <output id="finalgrade"></output>

</form>


